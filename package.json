{
  "name": "remka-website-prototype",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Static prototype for Remka website",
  "scripts": {
    "dev": "npm-run-all --parallel dev:serve dev:css",
    "dev:serve": "live-server --port=5173 --open=index.html --watch=.",
    "dev:css": "tailwindcss -i ./src/tailwind.css -o ./assets/css/tailwind.css -w",
    "build": "tailwindcss -i ./src/tailwind.css -o ./assets/css/tailwind.css --minify && node tools/strip-devnotes.mjs .",
    "format": "prettier --write .",
    "lint": "eslint assets/js --ext .js && node tools/validate-devnotes.mjs",
    "lint:staged": "node tools/validate-devnotes.mjs --staged",
    "devnotes:report": "node tools/devnotes-report.mjs",
    "devnotes:fix": "node tools/devnotes-fix.mjs --apply",
    "images:process": "node tools/process-images.mjs",
    "images:dry": "node tools/process-images.mjs --dry",
    "images:revert": "node tools/revert-webp.mjs",
    "check:links": "node -e \"const fs=require('fs');process.exit(fs.existsSync('dist')?0:1)\" && node tools/check-links.mjs dist || node tools/check-links.mjs .",
    "serve": "npm run dev",
    "start": "npm run dev",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "autoprefixer": "^10.4.20",
    "exifr": "^7.1.3",
    "fast-glob": "^3.3.2",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.40",
    "prettier": "^3.3.3",
    "eslint": "^9.9.1",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.10"
  }
}
